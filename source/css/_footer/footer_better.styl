#footer_icons
    background var(--better-footer-icons-bg)
    padding-top 2rem
    display flex
    flex-wrap wrap
    justify-content center
    align-items center
    // z-index -1

    .icon_link
        height 40px
        width 40px
        display flex
        align-items center
        justify-content center
        margin 1rem
        background-color var(--better-footer-icon-bg)
        border-radius 50%

        &:hover
            background-color var(--better-footer-hover) !important

        i
            font-size 20px
            color #fff
            transition .3s

    > div
        display flex
    .footer_logo_container
        position: relative
        display: inline-block
        width 60px
        height 60px
        margin 0 1rem
        cursor pointer
        transition all .25s

        &::before
            content: 'ðŸ¡¹'
            color var(--liushen-text)
            text-align center
            position: absolute
            top: 50%
            left: 50%
            font-size: 30px
            transform: translate(-50%, -50%)
            width: 100%
            height: 100%
            white-space nowrap
            border 2px solid var(--liushen-text)
            background: var(--card-bg)
            border-radius: 50%
            z-index: 2
            opacity: 0
            visibility: hidden
            transition opacity .25s, visibility .25s

        img.footer_logo
            border-radius 50%
            width 100%
            height 100%
            z-index 1
            transition: all .25s

            &:hover
                transform scale(1.1)
        
        &:hover
            &::before
                opacity: 1
                visibility: visible

@media screen and (max-width:768px)
    #footer_icons
        .footer_logo_container
            display none

        a.icon_link
            margin 1rem 20px

#footer_content,
#footer_icons
    margin 0
    width 100%

@media screen and (min-width:1280px)
    #footer_content
        padding-left calc((100% - 1200px) / 2) !important
        padding-right calc((100% - 1200px) / 2) !important

#footer_content
    background var(--better-footer-content-bg)
    display flex
    justify-content space-between
    flex-wrap wrap
    padding 0 2rem 2rem
    transition color 0.3s ease

    #friend-links-in-footer
        .footer-title
            button
                font-size 14px
                color var(--font-color)
                margin-left 5px
                transition .3s

                &:hover
                    color var(--better-footer-hover)

        @media screen and (max-width:768px)
            h3
                padding-left 10px

    .footer-group
        min-width 120px
        text-align center

    .footer-title
        color var(--font-color)

    .footer-links
        display flex
        flex-direction column

    .footer-item
        font-size 1rem
        line-height 1.7
        color var(--font-color)

        &:hover
            color var(--better-footer-hover)
            text-decoration underline

    @media screen and (max-width:768px)
        padding 1rem

#footer-bottom
    background var(--better-footer-bottom-bg)
    padding 1rem
    z-index 2
    border-top 1px solid var(--liushen-card-border)

    a
        display flex
        transition color 0.3s ease
        color var(--font-color)

        &:not(:first-child)::before
            content '|'
            font-size 14px
            line-height 2.45
            margin 0 10px

        @media screen and (max-width:970px)
            &:not(:first-child)::before
                line-height 2.25
                margin 0 8px

        &:hover
            color var(--better-footer-hover)

            &::before
                color var(--font-color)
                text-decoration: none

    .footer-bottom-content
        display flex
        justify-content space-between
        max-width 1220px
        width 100%
        margin 0 auto
        flex-wrap wrap

        *
            font-size 17px
            white-space nowrap

        @media screen and (min-width:2000px)
            max-width 1480px

        .footer-bottom-left,
        .footer-bottom-right
            display flex
            flex-direction column

            div,
            span
                display flex
                align-items center

            div
                justify-content flex-end

    @media screen and (max-width:960px)
        padding 1rem 0 !important

        .footer-bottom-content *
            font-size 1rem

        .footer-bottom-left,
        .footer-bottom-right
            width 100%
            align-items center

@media (max-width: 470px)
    #footer-bottom
        > div
            > div.footer-bottom-left
                > div
                    > a:nth-child(2)
                        display none

            > div.footer-bottom-right
                > div:nth-child(2)
                    > a:nth-child(1)
                        display none

@media (max-width: 820px)
    #footer_content
        > div:nth-child(4)
            display none

@media (max-width: 680px)
    #footer_content
        > div:nth-child(3)
            display none

@media (max-width: 530px)
    #footer_content
        > div:nth-child(1),
        > div:nth-child(5)
            display none
