#rightside
  position: fixed
  display: flex
  flex-direction: column
  gap: 5px
  right: -38px
  bottom: $rightside-bottom
  z-index: 100
  opacity: 0
  transition: all .5s
  
  +maxWidth768()
    right: -48px

  &.rightside-show
    opacity: .8
    transform: translate(-58px, 0)
  
  #rightside-config-show
    display: flex
    flex-direction: column
    gap: 5px
    align-items: flex-end

  #rightside-config-hide
    display: flex
    flex-direction: column
    gap: 5px
    align-items: flex-end
    height: 0
    opacity: 0
    transition: transform .4s
    transform: translate(60px, 0)

    &.show
      height: auto
      opacity: 1
      transform: translate(0, 0)

    &.status
      height: auto
      opacity: 1

  & > div
    & > button,
    & > a
      display: flex !important
      min-width: w = 35px
      width: w
      height: w
      background-color: var(--btn-bg)
      color: var(--btn-color)
      align-items: center
      justify-content: center
      font-size: 16px
      line-height: w
      border-radius: 18px
      transition: width .4s ease-in-out, background-color .4s, color .4s !important

      i
        margin: 0 10px
      
      .rightside-text
        width: 0
        text-align: left
        overflow: hidden
        margin-right: 0
        transition: width .4s ease-in-out
        white-space: nowrap

      &:hover
        background-color: var(--btn-hover-color)
        width: 115px

        svg
          margin: 0 5px

        .rightside-text
          width: 80px

  #mobile-toc-button
    +minWidth900()
      display: none !important

  +maxWidth900()
    #hide-aside-btn
      display: none

  if hexo-config('rightside_scroll_percent')
    #go-up
      .scroll-percent
        display: none

      &.show-percent
        .scroll-percent
          display: block

          & + i
            display: none

      &:hover
        .scroll-percent
          display: none

          & + i
            display: block